<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_layout_bg">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_gravity="center"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="1dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_card_bg"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?android:actionBarSize"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_lott" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tv_days_heading"
                android:text="TONIGHT"
                android:textSize="25sp"
                android:textColor="#0000FF"
                android:textAllCaps="false"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_days_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="TONIGHT"
                android:textSize="36sp"
                android:textColor="#0000FF"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tv_min"
                android:layout_marginBottom="6dp"
                android:text="Draw Closes in"
                android:textSize="30sp"
                android:textColor="#0000FF"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/tv_day_txt"
                android:textSize="@dimen/text_size_max"
                android:textColor="#000080"
                android:textAllCaps="false"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/tv_day_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tv_hr"
                android:layout_alignParentBottom="true"
                android:text="days"
                android:textSize="20sp"
                android:textColor="#0000FF"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/tv_hr_txt"
                android:layout_marginStart="6dp"
                android:textSize="@dimen/text_size_max"
                android:textColor="#000080"
                android:textAllCaps="false"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/tv_hr_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tv_min"
                android:layout_alignParentBottom="true"
                android:text="hrs"
                android:textSize="20sp"
                android:textColor="#0000FF"
                android:textAllCaps="false"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/tv_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="6dp"
                android:textSize="@dimen/text_size_max"
                android:text="00"
                android:textColor="#000080"
                android:textAllCaps="false"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/tv_min_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/tv_min"
                android:layout_marginEnd="6dp"
                android:text="mins"
                android:textSize="20sp"
                android:textColor="#0000FF"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/tv_min_txt"
                android:textSize="@dimen/text_size_max"
                android:textColor="#000080"
                android:textAllCaps="false"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/tv_sec_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/tv_sec"
                android:text="secs"
                android:textSize="20sp"
                android:textColor="#0000FF"
                android:textAllCaps="false"
                android:textStyle="italic" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>